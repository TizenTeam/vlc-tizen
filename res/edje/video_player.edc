collections
{
    base_scale: 1.8;
    group
    {
        name: "media_player_renderer";
        parts{
            part{
                name: "swallow.visualization";
                type: SWALLOW;
                description{
                    state: "default" 0.0;
                    rel1{
                        relative: 0.0 0.0;
                    }
                    rel2{
                        relative: 1.0 1.0;
                    }
                }
            }
            part{
                name: "hub_background";
                type: RECT;
                description{
                    state: "default" 0.0;
                    color: 128 128 128 100; // transparent grey
                    rel1{ //top-left corner
                        relative: 0.05 0.65;
                    }
                    rel2{ //bottom-right corner
                        relative: 0.95 0.95;
                    }
                    max: -1 120;
                }
            }
            part{
                name: "swallow.progress";
                type: SWALLOW;

                description {
                    state: "pause" 0.0;
                    rel1 {
                       relative: 0.0 0.0;
                       to: "hub_background";
                    }
                       rel2 {
                       relative: 1.0 0.3;
                       to: "hub_background";
                    }
                }
            }
            part{
                name: "hub_button";
                type: RECT;
                description{
                    state: "default" 0.0;
                    visible: 0;
                    rel1{
                        relative: 0.0 0.3;
                        offset: 0 5;
                        to: "hub_background";
                    }
                    rel2{
                        relative: 1.0 0.95;
                        to: "hub_background";
                    }
                }
            }
            part {
                name: "swallow.button1";
                type: RECT;
                description {
                    visible: 0;
                    state: "pause" 0.0;
                    rel1 {
                        relative: 0.0 0.0;
                        to: "hub_button";
                    }
                    rel2 {
                        relative: 0.2 1.0;
                        to: "hub_button";
                        to_x: "hub_button";
                        to_y: "hub_button";
                    }
                }
            }
            part {
                name: "swallow.button2";
                type: RECT;
                description {
                    visible: 0;
                    state: "pause" 0.0;
                    rel1 {
                        relative: 0.2 0.0;
                        to: "hub_button";
                    }
                    rel2 {
                        relative: 0.4 1.0;
                        to: "hub_button";
                        to_x: "hub_button";
                        to_y: "hub_button";
                    }
                }
            }
            part {
                name: "swallow.play";
                type: SWALLOW;
                description {
                    state: "pause" 0.0;
                    aspect: 1.0 1.0;
                    aspect_preference: VERTICAL;
                    rel1 {
                        relative: 0.4 0.0;
                        to: "hub_button";
                    }
                    rel2 {
                        relative: 0.6 1.0;
                        to: "hub_button";
                        to_x: "hub_button";
                        to_y: "hub_button";
                    }
                }
            }
            part {
                name: "swallow.button4";
                type: RECT;
                description {
                    visible: 0;
                    state: "pause" 0.0;
                    rel1 {
                        relative: 0.6 0.0;
                        to: "hub_button";
                    }
                    rel2 {
                        relative: 0.8 1.0;
                        to: "hub_button";
                        to_x: "hub_button";
                        to_y: "hub_button";
                    }
                }
            }
            part {
                name: "swallow.button5";
                type: RECT;
                description {
                    visible: 0;
                    state: "pause" 0.0;
                    rel1 {
                        relative: 0.8 0.0;
                        to: "hub_button";
                    }
                    rel2 {
                        relative: 1.0 1.0;
                        to: "hub_button";
                        to_x: "hub_button";
                        to_y: "hub_button";
                    }
                }
            }
        } //parts
    }
}
